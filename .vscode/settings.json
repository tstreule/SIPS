{
  // Linting
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.banditEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "pflake8",
  "python.linting.flake8Args": ["--config", "pyproject.toml"],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": ["--config-file", "pyproject.toml"],
  "python.linting.pylintEnabled": false,
  // Formatting
  "editor.formatOnSave": true,
  // Formatting: Python
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--config", "pyproject.toml"],
  "isort.args": ["--profile", "black"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  // Formatting: Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Formatting: JSON with Comments
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true
  },
  // Set the PYTHONPATH to the root of workspace directory
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}"  
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}" 
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "autoDocstring.docstringFormat": "numpy",
  "autoDocstring.startOnNewLine": true

}
